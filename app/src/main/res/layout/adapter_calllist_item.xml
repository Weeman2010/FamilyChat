<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/call_item_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile_image"
        />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/call_item_username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Username"/>

        </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/callitem_arrow_out"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/ic_arrow_out"
               app:tint="@color/primary" />
           <ImageView
               android:id="@+id/callitem_arrow_in"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/ic_arrow_in"
               app:tint="@color/primary" />

           <TextView
               android:id="@+id/call_item_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="8dp"
               android:text="15/03/2021 9.10 Uhr "/>
       </LinearLayout>

    </LinearLayout>
    <ImageView

        android:id="@+id/call_item_voicecall"
        android:layout_gravity="center_vertical"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_call"
        app:tint="@color/primary" />
    <ImageView

        android:id="@+id/call_item_videocall"
        android:layout_gravity="center_vertical"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_videocall"
        app:tint="@color/primary" />
</LinearLayout>